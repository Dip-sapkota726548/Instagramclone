<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">


            <ImageView
               android:src="@drawable/instagramlogo"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edcoventryid"
            android:layout_marginTop="20sp"
            android:ems="12"
            android:layout_width="wrap_content"
            android:hint="CoventryId"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edfirstname"
            android:layout_width="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="12"
            android:hint="Enter first name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edlastname"
            android:layout_width="wrap_content"
            android:ems="12"
            android:layout_marginTop="20sp"
            android:hint="Enter lastname "
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edusername"
            android:layout_width="wrap_content"
            android:ems="12"
            android:layout_marginTop="20sp"
            android:hint="Enter Username "
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/ETPSSWORD"
            android:layout_width="wrap_content"
            android:ems="12"
            android:layout_marginTop="20sp"
            android:hint="Enter Password"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Batch name"
            android:textSize="18sp"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/batchspinner"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Profile Picture"
            android:textSize="18sp"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etprofilesignup"
            android:ems="20"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>



       <Button
           android:id="@+id/btnsignup"
           android:layout_marginTop="30sp"
           android:background="@android:color/holo_blue_dark"
           android:text="SignUp"
           android:textColor="@color/white"
           android:layout_gravity="center"
           android:textSize="20sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>









</LinearLayout>